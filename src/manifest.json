{
  "manifest_version": 2,
  "name": "Gesticulate",
  "version": "0.3a6",

  "description": "Perform common browsing commands via rocker gestures.",

  "applications": {
    "gecko": {
      "id": "gesticulate@squib.org"
    }
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_start",
      "js": ["log.js", "functions.js", "gestures.js", "mouseGestures.js",
             "main.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  }
}
